{{>../header}} 
{{>authHead}}
<div class="card card-outline-secondary">
    <div class="card-header">
        <h3 class="mb-0">Login</h3>
    </div>
    <div class="card-body">
        <form action="/auth/login" id="loginForm" class="form needs-validation" novalidate method="POST">
            {{#error}}
            <div class="form-group">
                <h5 class="text-danger">{{errTitle}}</h5>
                <p class="text-danger">{{{errMsg}}}</p>
            </div>
            {{/error}}
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" class="form-control" name="email" id="email" required placeholder="Email Address">
                <div class="invalid-feedback">Please enter your email address</div>
            </div>
            <div class="form-group">
                <label for="pwd1">Password</label>
                <input type="password" name="password" class="form-control" id="pwd1" required="" placeholder="Password">
                <div class="invalid-feedback">Please enter a password</div>
            </div>
            <div class="form-group">
                <a href="/auth/resetPassword">Forgot password? </a>
            </div>
            <a href="/auth/" class="btn btn-info btn-teal btn-lg float-left">Cancel</a>
            <button type="submit" class="btn btn-info btn-teal btn-lg float-right" id="btnLogin">Login</button>
        </form>
    </div>
</div>
{{>authFoot}} 
{{>formScript}} 
{{>../footer}}